<div>
    <form id="loginSquare">
      <h3>Login</h3>
      {{#each users}}
        <a href="/users/{{this.id}}"><span class="avatar" style="background-image: url({{this.avatarUrl}});"></span></a>
      {{/each}}
      <div class="login">
        <input name="username" placeholder="username" required/>
        <button>Login</button>
      </div>
      <div class="create">
          <h4>Create Account &nbsp;<svg onclick="myFunction()" width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-plus-circle"  fill="currentColor" xmlns="http://www.w3.org/2000/svg">
            <path fill-rule="evenodd" d="M8 15A7 7 0 1 0 8 1a7 7 0 0 0 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
            <path fill-rule="evenodd" d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z"/>
            </svg></h4>
      </div>
    </form>
    <form action="/users" method="POST" id="createSquare">
      <h3>Create Account</h3>
      <div class="create">
        <input name="username" placeholder="username" required/>
        <input avatar="avatarUrl" type="url" placeholder="avatar URL" required/>
        <button>Login</button>
      </div>

    </form>
</div>
